<div class="w-100 h-100 p-5 d-flex justify-content-between align-items-center">

    <div class="w-75 h-75 d-flex justify-content-center align-items-center">
        <form action="/update-user" 
            method="PUT" 
            class="w-50 bg-secondary-subtle p-2 mt-4 shadow rounded">

            <div class="text-center">
                <h1 class="text-primary">
                    Update Employee
                </h1>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" 
                    name="name" id="name">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" id="email">
            </div>
            <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select class="form-select" name="role" aria-label="Default select example">
                    <option value="Employee" name="role">Employee</option>
                    <option value="Admin" name="role">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>

    <div class="w-50 h-75 d-flex justify-content-center align-items-center bg-danger">
        Feedback
    </div>

    

</div>
